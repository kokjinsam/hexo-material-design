.md-post
	width: 100%
	position: relative
	display: flex
	flex-direction: column
	background-color: white-text
	box-shadow: elevate-1
	margin: (spacing/2) spacing
	border-radius: 3px
	flex-grow: 1
	
	animation: display 0.5s cubic-bezier(0.55, 0, 0.1, 1) forwards
	
	&:hover
		background-color: #f5f5f5
		transition: 0.5s ease-in

	@media (min-width: breakpoint-landscape-phablet)
		width: calc(50% - 20px)
		max-width: calc(50% - 20px)
		margin: spacing spacing
	
	> .md-post__details
		position: relative
		display: flex
		flex-direction: column
			
		> .md-post__title 
			padding: spacing*7 spacing*2 0 spacing*2
			
			// targeting potrait iphone 4 - 6+
			font-size: 24px
			
			// targeting landscape iphone 5 - 6+
			@media (min-width: 500px) && (min-height: 320px)
				font-size: 24px
			
			// targeting landscape iphone 6 and 6+
			@media (min-width: 500px) && (min-height: 320px)
				font-size: 26px
			
			// targeting portrait Nexus 7
			@media (min-width: 600px)
				font-size: 30px

		> .md-post__time
			color: secondary-text
			padding: (spacing/2) spacing*2 spacing*2 spacing*2
			
			// targeting potrait iphone 4 - 6+
			font-size: 16px
			
			// targeting landscape iphone 5 
			@media (min-width: 500px) && (min-height: 320px)
				font-size: 16px
			
			// targeting landscape iphone 6 and 6+
			@media (min-width: 500px) && (min-height: 320px)
				font-size: 18px
			
			// targeting portrait Nexus 7
			@media (min-width: 600px)
				font-size: 20px
				
		> .md-post__excerpt
			padding: spacing*2 spacing*2 spacing*3 spacing*2
			height: 10em
			position: relative
			overflow: hidden
			box-sizing: border-box
			color: secondary-text
			
			&:after
				content: "";
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				width: 100%;
				height: 3em;
				background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1) 70%);
			
			// targeting potrait iphone 4 - 6+
			font-size: 18px
			line-height: 26px
			
			// targeting landscape iphone 5 - 6+
			@media (min-width: 500px) && (min-height: 320px)
				font-size: 18px
				line-height: 26px
				
			// targeting landscape iphone 6 and 6+
			@media (min-width: 500px) && (min-height: 320px)
				font-size: 20px
				line-height: 28px
			
			// targeting Nexus 7 portrait
			@media (min-width: 600px)
				font-size: 22px
				line-height: 30px
				
		> .md-post__tags
			display: flex
			flex-direction: row
			flex-wrap: wrap
			padding: spacing*2 spacing*2 spacing*4 spacing*2
			
			> .md-post__tag
				margin-left: (spacing/2)
				margin-right: (spacing/2)
				margin-top: (spacing/2)
				padding: (spacing/2) spacing
				background-color: light-primary-color
				border-radius: 3px
				display: flex
				flex-direction: row
				align-items: center
				z-index: 2
				text-decoration: none
				color: white-text
				
				// targeting potrait iphone 4 - 6+
				font-size: 14px
				
				i
					font-size: 7px
					margin-right: spacing
				
				// targeting landscape iphone 5 - 6+
				@media (min-width: 500px) && (min-height: 320px)
					font-size: 14px
					i
						font-size: 7px	

.md-post__date
	position: absolute
	bottom: -35px
	right: spacing*2
	border-radius: 50%
	width: 70px
	height: 70px
	display: flex
	flex-direction: column
	align-items: center;
	justify-content: center;
	background-color: accent-color
	color: white-text
	box-sizing: border-box;
	padding: 3px;
	
.md-post__month
	font-size: 16px
	line-height: 16px
	
.md-post__day
	font-size: 26px
	font-weight: bolder
	padding: 0
	margin: 0
	line-height: 26px

.md-post__cover
	height: 0
	width: 100%
	display: block
	position: relative
	padding-bottom: 47.11%

.md-post__cover--none
	padding-bottom: 50px;
	
.md-post__thumbnail
	height: 100%
	width: 100%

.md-post__thumbnail-image
	display: block
	position: absolute
	width: 100%
	height: 100%
	opacity: 1
	background-size: cover
	background-position: center
	transition: opacity 0.3s ease-in

.md-post__thumbnail--empty
	width: 100%
	height: 100%
	background-size: 100% 100%
	background-image: url(thumbnail-default)

.md-post--expand
	display: flex
	flex-direction: column
	background-color: white-text
	flex-grow: 1
	
	> .md-post__details
		position: relative
		display: flex
		flex-direction: column
		padding: spacing*3 spacing*2
		
		> .md-post__title
			padding: spacing*4 spacing*2 0 spacing*2
			
			h2
				font-size: 40px
				flex-grow: 1
				position: relative
			i 
				margin-right: spacing
			
		> .md-post__time
			color: secondary-text
			padding: (spacing/2) spacing*2 spacing*2 spacing*2
			font-size: 14px
			
		> .md-post__content
			padding: spacing*2 spacing*2 spacing spacing*2
			font-size: 18px
			line-height: 24px;
			box-sizing: border-box
			
.md-post--float
	@media (min-width: breakpoint-large-desktop)
		position: absolute
		max-width: 1000px
		top: 200px
		left: calc((100% - 1000px)/2)
		margin-bottom: 40px
		border-radius: 3px

.md-post--space
	margin-top: spacing*2
	margin-bottom: spacing*2
	
	&:first-child
		margin-top: 0
	
.md-post__footer
	display: flex
	flex-direction: row
	flex-wrap: wrap
	padding: spacing spacing*4 spacing*3 spacing*4

.md-post__footer-pic
	width: 72px
	height: 72px
	background-color: primary-color
	border-radius: 50%

.md-post__footer-label
	margin-left: spacing*3
	margin-bottom: spacing
	color: secondary-text
	
.md-post__footer-author
	font-size: 26px
	margin-left: spacing*3
	flex-grow: 1
	
.md-post__footer-social-media
	margin-left: spacing*3
	margin-top: spacing
	flex-grow: 1
	a
		margin: spacing
		font-size: 24px

.md-post__footer-more-articles
	width: 100%
	display: flex
	margin-top: spacing*4
	flex-wrap: wrap

.md-post__footer-more-articles--prev,
.md-post__footer-more-articles--next
	flex-grow: 1
	margin-top: spacing*3
	width: 100%
	display: flex
	min-height: 72px
	font-size: 24px
	position: relative
	i
		font-size: 40px
		
	@media (min-width: breakpoint-landscape-phablet)
		width: 50%

.md-post__footer-more-articles--prev
	justify-content: flex-start
	align-items: center
	padding-right: spacing*5
	box-sizing: border-box
	
	@media (min-width: breakpoint-landscape-phablet)
		padding: spacing*2
		
.md-post__footer-more-articles--next
	justify-content: flex-end
	align-items: center
	padding-left: spacing*5
	box-sizing: border-box
	
	@media (min-width: breakpoint-landscape-phablet)
		padding: spacing*2

.md-post__footer-more-title
	span
		color: secondary-text
