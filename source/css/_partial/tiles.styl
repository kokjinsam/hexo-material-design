/*-- Tiles size --------------------------------------- */
.md-board .md-tile--large,
.md-board .md-tile--small 
	width: calc(100% - 10px)
	min-height: 270px


@media (min-width: 627px) 
	.md-board .md-tile--large,
	.md-board .md-tile--small 
		width: calc(50% - 10px)

@media (min-width: 950px) 
	.md-board .md-tile--large 
		width: calc(50% - 10px)
	
	.md-board .md-tile--small
		width: calc(25% - 10px)

/*-- Display animation -------------------------------- */
.display-animation > * 
  transform: scale(0)

.display-animation > .animated 
  animation: display 0.5s cubic-bezier(0.55, 0, 0.1, 1) forwards

.no-js .display-animation > * 
  transform: scale(1)

