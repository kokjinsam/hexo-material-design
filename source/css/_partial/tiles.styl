/* -- Ripple-effect ----------------------------------- */
.md-ripple__effect
  position: relative
  overflow: hidden
  transform: translatez(0)

.md-ripple__ink 
  display: block
  position: absolute
  pointer-events: none
  border-radius: 50%
  transform: scale(0)

.md-ripple__ink 
  background: #fff
  opacity: 1

.md-ripple__ink.animate 
  animation: ripple-effect 0.5s linear

$keyframe-ripple = ripple-effect
@keyframes {$keyframe-ripple}
  100% 
    opacity: 0;
    -webkit-transform: scale(2.5);
    -ms-transform: scale(2.5);
    -o-transform: scale(2.5);
    transform: scale(2.5);

/* -- Board --------------------------------------- */
.md-board 
  position: relative
  display: flex
  flex-direction: row
  flex-wrap: wrap

.md-board > * 
  margin: 4px
  display: flex
  flex-direction: column


/* -- Tiles ------------------------------------------- */
.md-board .md-tile 
  color: #ffffff
	flex-grow: 1
  position: relative
  overflow: hidden
  cursor: pointer
  outline: 0
  border: 0
  border-radius: 0
  transition: all 0.15s ease-in-out

.md-board .md-tile:hover,
.md-board .md-tile:active,
.md-board .md-tile.active,
.md-board .md-tile:focus,
.md-board .md-tile:active:focus,
.md-board .md-tile.active:focus 
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23)

/* -- Tiles content ----------------------------------- */
.md-board .md-tile .md-tile__image 
  position: absolute
  display: block
  width: 100%
  background-repeat: no-repeat
  background-position: center center
  background-size: contain


.md-board .md-tile .md-tile__image.md-tile__image--cover 
  background-position: left top
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  top: 0
  bottom: 0
  z-index: -1
  opacity: 0.3

