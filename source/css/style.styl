@import "nib"
@import "_variables"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

::selection
  color: white
  background: color-link

body
  background: color-background
  font-family: font-sans
  -webkit-text-size-adjust: 100%

// layout
.md-content__wrapper
	max-width: max-width
	display: flex
	justify-content: center
	margin: 0 auto

.md-main
	width: 100%
	box-sizing: border-box

.md-touch-target 
	bottom: 0
	left: 0
	position: absolute
	right: 0
	top: 0
	z-index: 2

.md-flex--row 
	display: flex
	flex-direction: row
	
.md-flex--column
	display: flex
	flex-direction: column

.md-flex--justify
	justify-content: center
	
.md-flex--align
	align-items: center

.md-divider
	background-color: divider-color
	width: 90%
	height: 2px
	margin: spacing*2 auto
	
@import "_partial/header"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/content"
@import "_partial/tiles"
@import "normalize"
